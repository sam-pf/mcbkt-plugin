#!/bin/bash

! . ~/.bash_funcs && echo '** Critical error (bash_funcs).' >&2 && exit 1
set -e
git--check-hostname-s-for-hook -e -s 3 "${0##*/}"

gecko -ljc -dr 'pre-add task: syncing in from meta/_meta'
meta_folder=$(git--cd -n meta)
"$meta_folder"/_meta/_sync-in --exclude /README.legal

# the full make is disabled for now
make jsext lint
